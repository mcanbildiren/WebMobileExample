@{
    ViewBag.Title = "Ürün Sayfası";
}
<div class="row">
    <div class="col-md-12" id="cardListProduct">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ürün Listesi </h3>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switch">
                    <label class="form-check-label" for="switch">Ürün Ekle</label>
                </div>
            </div>
            <div class="card-body">
                <ul id="listProduct" class="list-group d-flex justify-content-between">
                    <li class="list-group-item">Ürün Adı - Fiyatı - Kategorisi</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6" id="cardAddProduct" style="display: none">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ürün Ekle</h3>
            </div>
            <div class="card-body">
                <form id="formProduct">
                    <div class="mb-3 row">
                        <label for="cmbCategory" class="col-sm-2 col-form-label">Kategori</label>
                        <div class="col-sm-10">
                            <select id="cmbCategory" class="custom-select" placeholder="Kategori seçiniz...">
                                <option>Bir kategori seçiniz</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="txtProductName" class="col-sm-2 col-form-label">Ürün Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtProductName">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="txtUnitPrice" class="col-sm-2 col-form-label">Fiyat</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtUnitPrice">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6" id="cardUpdateCategory" style="display: none">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ürün Güncelle</h3>
            </div>
            <div class="card-body">
                <form id="formUpdateProduct">
                    <div class="mb-3 row">
                        <label for="txtUpdateProductName" class="col-sm-2 col-form-label">Ürün Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtUpdateProductName">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="txtUpdateUnitPrice" class="col-sm-2 col-form-label">Fiyat</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtUpdateUnitPrice">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="txtUpdateCategory" class="col-sm-2 col-form-label">Kategori</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtUpdateCategory">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                    </div>
                    <input type="hidden" id="txtUpdateProductId" />
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(()=>{
        getProducts();
        $("#switch").on("change", ()=>{
            console.log("değişti")
            if ($("#switch").is(":checked")) {
                getCategoryLookup();
                $("#cardListProduct").attr("class", "col-md-6");
                $("#formProduct").trigger("reset");
                $("#cardAddProduct").slideDown(750);
            }
            else{
                $("#cardAddProduct").slideUp(750, ()=> {
                    $("#cardListProduct").attr("class", "col-md-12");
                });
            }

        });
        $("#formProduct").on("submit", (e)=>{
            e.preventDefault();
            var data = {
                categoryId: $("#cmbCategory").val(),
                name: $("#txtProductName").val(),
                unitPrice: $("#txtUnitPrice").val()
            };
            $.ajax({
                url:"../../api/productapi/add",
                method: "POST",
                data: JSON.stringify(data),
                headers: {
                    "Content-Type": "application/json"
                }
            }).done(data => {
                console.log(data);
                getProducts();
            }).fail(error => {
                console.log(error);
            });
        })
    });

    const getProducts = () => {
        $.ajax({
            url:"../../api/productapi/all",
            method: "GET"
        }).done(data => {
            console.log(data);
            addProductList(data);
        }).fail(error => {
            console.log(error);
        });
    }

    const getCategoryLookup = () => {
        $.ajax({
              url: "../../api/categoryapi/all",
              method: "GET"
        }).done(data => {
            console.log(data);
            addCategoryLookup(data);
        }).fail(error =>{
            console.log(error);
        });
    };

    const addCategoryLookup = (categories) => {
        $("#cmbCategory").empty();
        categories.forEach(category => {
            $("#cmbCategory").append(`<option value="${category.id}">${category.name}</option>`);
        });
    };
    const addProductList = (products) => {
        $("#listProduct").empty();
        products.forEach(product => {
            $("#listProduct").append(`<li class="list-group-item">${product.name} - ${product.unitPrice} - ${product.category.name}</li>`);

        });
    };
